<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/CustomActionBar</item>

        <item name="android:selectableItemBackground">@drawable/actionbar_item_background</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_item_background</item>
        <item name="android:itemBackground">@drawable/actionbar_item_background</item>
    </style>

    <!-- ActionBar styles -->
    <style name="CustomActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/fuelmeup_blue</item>
    </style>

</resources>